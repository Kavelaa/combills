.bill-intro {
  display: flex;
  justify-content: center;
  width: 690rpx;
  padding: 30rpx 0;
  margin: 0 auto 30rpx;
  border-radius: 20rpx;
  background-color: white;
}

.hover {
  background-color: rgba(216, 216, 216, 0.6);
}

.notice {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.left {
  flex:5;
  display: flex;
  flex-direction: column;
}

.right {
  flex:3;
  display: flex;
  justify-content: center;
  align-items: center;
}

.name {
  font-weight: bold;
  font-size: 1.2em;
}

.update-time {
  color: rgb(192, 192, 192);
  font-size: 0.7em;
}
