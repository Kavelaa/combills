.page {
  padding-top: 30rpx;
  height: 100vh;
  box-sizing: border-box;
  background-color: rgba(192, 192, 192, 0.13);
}

.userinfo {
  background-color: white;
  box-sizing: border-box;
  border-radius: 20rpx;
  width: 690rpx;
  padding: 40rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
}

.hover {
  background-color: rgba(216, 216, 216, 0.6);
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

navigator.ignore-group {
  background-color: white;
  width: 690rpx;
  margin: 30rpx auto;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}