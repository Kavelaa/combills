<view class='page'>
  <form bindsubmit='bindSubmit'>
    <view class='wrapper'>
      <text>消费额</text>
      <input name='amount' class='input' type='digit' placeholder='本次消费' bindinput='input'></input>
      <textarea name='textarea' class='textarea' placeholder='在此填写备注（如该笔明细产生原因）' auto-height='true'/>
    </view>
    <button class='button' form-type='submit' disabled='{{disabled}}'>确定</button>
  </form>
</view>